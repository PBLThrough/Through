<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:id="@+id/text_layout">
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="계정 등록 안내"/>

    <TextView
        android:id="@+id/account_text"
        android:layout_below="@+id/title"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/mainColor"
        android:text="dream7739@naver.com"/>

    <TextView
        android:id="@+id/sub_text1"
        android:layout_below="@id/account_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="은 이미 등록된 계정입니다." />

    <TextView
        android:id="@+id/sub_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sub_text1"
        android:text="계속 진행하시겠습니까?"/>

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/account_character"/>
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        android:layout_below="@id/text_layout">
    <Button
        android:id="@+id/btn_ok"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:background="@drawable/send_option"
        android:text="OK"/>

    <Button
        android:id="@+id/btn_cancle"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="CANCEL"
        android:background="@drawable/send_option"
        android:textColor="@color/mainColor"/>

    </LinearLayout>

</RelativeLayout>
