<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/text_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">


        <TextView
            android:id="@+id/trust_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="주의"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/trust_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_marginTop="40dp"
            android:text=""
            android:textColor="@color/mainColor" />

        <TextView
            android:id="@+id/sub_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/trust_text"
            android:text="은 신뢰할 수 없는 계정입니다" />

        <TextView
            android:id="@+id/sub_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/sub_text1"
            android:text="계속 진행하시겠습니까?" />


        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/account_character" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_layout"
        android:layout_marginTop="10dp">


        <Button
            android:id="@+id/btn_ok"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/round_box"
            android:text="OK"
            android:textColor="@color/blackColor" />


        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:background="@drawable/round_box"
            android:text="CANCEL"
            android:textColor="@color/blackColor" />

    </LinearLayout>

</RelativeLayout>
